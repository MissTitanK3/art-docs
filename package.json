{
  "name": "turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev:web": "pnpm --filter web dev --hostname 0.0.0.0 --port 3000",
    "dev:docs": "pnpm --filter docs dev --hostname 0.0.0.0 --port 3001",
    "dev": "pnpm -r --parallel --filter web --filter docs dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "pnpm --filter @repo/migrations migrate",
    "db:migrate:watch": "pnpm --filter @repo/migrations migrate:watch",
    "db:migrate:commit": "pnpm --filter @repo/migrations migrate:commit",
    "db:status": "pnpm --filter @repo/migrations migrate:status",
    "db:region:init": "pnpm --filter @repo/migrations region:init"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "i18next": "^25.7.4",
    "react-i18next": "^16.5.3"
  }
}
