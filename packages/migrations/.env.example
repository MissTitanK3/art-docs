# Database URLs
# Main database for migrations
DATABASE_URL=postgres://user:password@localhost:5432/dispatch_db

# Shadow database for development (validation and testing)
SHADOW_DATABASE_URL=postgres://user:password@localhost:5432/dispatch_shadow

# Root database for reset operations (typically template1 or postgres)
ROOT_DATABASE_URL=postgres://postgres:password@localhost:5432/postgres

# Region initialization
REGION_ID=us-west-1
REGION_TIMEZONE=America/Los_Angeles

# Optional: Seed development data
SEED_DATA=false

# Database placeholders (used in migrations)
DATABASE_NAME=dispatch_db
DATABASE_OWNER=dispatch_user
